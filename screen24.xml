<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C1DBDF"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="#C1DBDF"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/arrow_back24"
                android:layout_width="30dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@+id/Ali1"
                android:contentDescription="Back Arrow"
                android:src="@drawable/arrow_back" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp">

                <TextView
                    android:id="@+id/textNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Notifications"
                    android:textColor="#2196F3"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@id/textNotifications"
                    android:contentDescription="Notification Icon"
                    android:src="@drawable/notifications" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textClearAll"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Clear All"
            android:layout_marginEnd="20dp"
            android:textColor="#DCC929"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="end"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="560dp">

            <TextView
                android:id="@+id/textNotification1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="You have added a mentor, Alex. Thank you!"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                />

            <ImageView
                android:id="@+id/iconClose"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_below="@+id/textNotification1"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="335dp"
                android:clickable="true"
                android:contentDescription="Close Icon"
                android:src="@drawable/close" />

            <View
                android:layout_below="@+id/textNotification1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textNotification2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:text="Your favorites list is expanding. Impressive"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                />

            <ImageView
                android:id="@+id/iconClose2"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_below="@+id/textNotification2"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="335dp"
                android:clickable="true"
                android:contentDescription="Close Icon"
                android:src="@drawable/close" />

            <View
                android:layout_below="@+id/textNotification2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textNotification3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="120dp"
                android:layout_marginStart="10dp"
                android:text="You have a new message in community."
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                />

            <ImageView
                android:id="@+id/iconClose3"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_below="@+id/textNotification3"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="335dp"
                android:clickable="true"
                android:contentDescription="Close Icon"
                android:src="@drawable/close" />

            <View
                android:layout_below="@+id/textNotification3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textNotification4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="170dp"
                android:layout_marginStart="10dp"
                android:text="Your favorite mentor is Online. Say Hi to him."
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                />

            <ImageView
                android:id="@+id/iconClose4"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_below="@+id/textNotification4"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="335dp"
                android:clickable="true"
                android:contentDescription="Close Icon"
                android:src="@drawable/close" />

            <View
                android:layout_below="@+id/textNotification4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textNotification5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="220dp"
                android:layout_marginStart="10dp"
                android:text="Thank you for booking a session. Good Luck."
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                />

            <ImageView
                android:id="@+id/iconClose5"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_below="@+id/textNotification5"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="335dp"
                android:clickable="true"
                android:contentDescription="Close Icon"
                android:src="@drawable/close" />

            <View
                android:layout_below="@+id/textNotification5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
