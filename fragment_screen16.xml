<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_container"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hamzakhalid.i210704.Screen16"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#1EBBD3"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#1EBBD3"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/arrow_back16"
                        android:layout_width="30dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="40dp"
                        android:contentDescription="Back Arrow"
                        android:src="@drawable/arrow_back" />
                    <!-- Call Icon -->
                    <ImageView
                        android:id="@+id/CallIcon1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="250dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/call"
                        android:contentDescription="Call Icon"/>

                    <!-- Video Call Icon -->
                    <ImageView
                        android:id="@+id/VideoIcon1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="300dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:contentDescription="Video Call Icon"
                        android:src="@drawable/video_camera" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textJohnCoopers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="John Cooper’s"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textCommunity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Community"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/contactImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/callDuration"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/profile"
                    app:tint="@android:color/white" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:background="#C1DBDF"
                android:padding="16dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="200dp">

                <LinearLayout
                    android:id="@+id/chatContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:background="#1EBBD3"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="How was your experience with his
mentorship? Satisfied??"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_marginStart="290dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:32"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#888888" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="200dp"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/contactImage1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/profile"
                            app:tint="@color/black" />
                        <!-- Example received message -->
                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#EDEDED"
                            android:padding="10dp"
                            android:text="Worth it!!"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginStart="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:32"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#888888" />

                    <!-- Example sent message -->

                    <!-- Another example received message -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="200dp"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/contactImage2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/profile"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#EDEDED"
                            android:padding="10dp"
                            android:text="Impressive"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <TextView
                        android:layout_marginStart="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:32"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#888888" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="200dp"
                        android:layout_height="61dp">
                        <ImageView
                            android:id="@+id/contactImage3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/profile"
                            app:tint="#BF1919" />
                        <TextView
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#EDEDED"
                            android:padding="10dp"
                            android:text="You’re missing out! Go take it!!!"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginStart="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:32"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#888888" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/bottomBarLayout"
                    android:layout_width="360dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7dp"
                    android:background="#1EBBD3"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/AttachmentButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Attachment Icon"
                        android:src="@drawable/attach_file"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/GalleryButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Gallery Icon"

                        android:src="@drawable/gallery"
                        app:tint="@color/white" />

                    <!-- Text Input Field -->

                    <EditText
                        android:id="@+id/editTextMessage"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="65dp"
                        android:hint="Type something..." />

                    <ImageView
                        android:id="@+id/CameraButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Camera Icon"

                        android:src="@drawable/photo_camera"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/micButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="260dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="mic Icon"

                        android:src="@drawable/mic"
                        app:tint="@color/white" />

                    <!-- Send Button -->
                    <ImageView
                        android:id="@+id/SendButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="290dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="Send Icon"

                        android:src="@drawable/send"
                        app:tint="@color/white" />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_marginTop="660dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:itemTextAppearanceInactive="@style/BottomNavigationView.InactiveText"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_navigation_menu"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="650dp"
                tools:ignore="MissingConstraints" />

</FrameLayout>