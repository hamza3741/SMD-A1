<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hamzakhalid.i210704.Screen15"
    android:id="@+id/frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#1EBBD3"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#1EBBD3"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/arrow_back15"
                        android:layout_width="30dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="25dp"
                        android:contentDescription="Back Arrow"
                        android:src="@drawable/arrow_back" />

                    <TextView
                        android:id="@+id/textJohnCooper"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/arrow_back15"
                        android:text="John Cooper"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold" />
                    <!-- Call Icon -->
                    <ImageView
                        android:id="@+id/CallIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="260dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/call"
                        android:contentDescription="Call Icon"/>

                    <!-- Video Call Icon -->
                    <ImageView
                        android:id="@+id/VideoIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="310dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="40dp"
                        android:contentDescription="Video Call Icon"
                        android:src="@drawable/video_camera" />
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="540dp"
                android:background="#C1DBDF"
                android:padding="16dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="120dp">

                <LinearLayout
                    android:id="@+id/chatContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="80dp"
                        android:background="#1EBBD3"
                        android:padding="10dp"
                        android:text="Hello, You there?"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="290dp"
                        android:text="10:30"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/contactImage1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/profile"
                            app:tint="@color/black" />
                        <!-- Example received message -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#EDEDED"
                            android:padding="10dp"
                            android:text="Yes"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="10:30"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- Example sent message -->

                    <!-- Another example received message -->



                    <TextView
                        android:layout_width="180dp"
                        android:layout_marginStart="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#1EBBD3"
                        android:padding="10dp"
                        android:text="I need your guidance."
                        android:textSize="16sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="290dp"
                        android:text="10:30"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="61dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/contactImage3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/profile"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:background="#EDEDED"
                            android:padding="10dp"
                            android:text="How can I help you?"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="10:32"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/bottomBarLayout"
                    android:layout_width="360dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="7dp"
                    android:background="#1EBBD3"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/AttachmentButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Attachment Icon"
                        android:onClick="onAttachmentButtonClick"
                        android:src="@drawable/attach_file"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/GalleryButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Gallery Icon"
                        android:onClick="onGalleryButtonClick"
                        android:src="@drawable/gallery"
                        app:tint="@color/white" />

                    <!-- Text Input Field -->

                    <EditText
                        android:id="@+id/editTextMessage"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="65dp"
                        android:hint="Type something..." />

                    <ImageView
                        android:id="@+id/CameraButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Camera Icon"
                        android:onClick="onCameraButtonClick"
                        android:src="@drawable/photo_camera"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/micButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="260dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="mic Icon"
                        android:onClick="onmicButtonClick"
                        android:src="@drawable/mic"
                        app:tint="@color/white" />

                    <!-- Send Button -->
                    <ImageView
                        android:id="@+id/SendButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="295dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="Send Icon"
                        android:onClick="onSendButtonClick"
                        android:src="@drawable/send"
                        app:tint="@color/white" />

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_marginTop="660dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemTextAppearanceInactive="@style/BottomNavigationView.InactiveText"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="650dp"
        tools:ignore="MissingConstraints" />

</FrameLayout>